
.container{
    width: 100%;
    height: 100%;
    background-color: #fff;
    margin: 0;
    padding: 0;   
}
.video{
    /* video标签认宽度300px、高度225px */
    width: 100%;
    height: 225px;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 90;
}
.video video {
    width: 100%;
}
.box{
    width: 100%;
    margin-top: 15px;
}
.box .text1{
    width: 100%;
    height: 15px;
    font-size:20px; 
    font-weight: bold;
    display: inline-block;
    text-align: center;
    color: black;
}
.box .text2,.text3{
    width: 50%;
    height: 10px;
    display: inline-block;
    font-size: 10px;
    font-weight: normal;
    margin-bottom: 10px;
    color: #888888;
}
 .box .text2{
    text-align: right;
} 
.box .text3{
    text-indent: .5em;
}
.box .text4{
    width: 100%;
    height: 20px;
    display: inline-block;
    font-size: 12px;
    color: #444444;
    margin-left: 10px;
}
.box{
    border-bottom:8px solid #E6E6FA;
    padding-bottom: 5px;
}
.scroll-user{
    margin-top: 225px;
    margin-bottom:40px; 
}
.comment{
    width: 100%;
    padding-top: 10px;
}
.userInfo{
    border-bottom:1px solid #E6E6FA;
}
.userInfo .userinfo-avatar{
    display: inline-block;
    height: 36px;
    width: 36px;
    margin-left:10px; 
    border-radius: 50%;
}
.userinfo-top{
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    align-items: center;
}
.userInfo-tab{
    margin-left: 45px;
    height:20px;
    clear: both;
    line-height: 20px;
}
.userInfo .userinfo-nickname{
    font-size: 12px;
    color: black;
    display: inline-block;
    height: 18px;
    width: 339px;
    margin-left: 10px;
    flex: 1;
}
.userInfo .text4{
    font-size: 12px;
    color: #888888;
    display: inline-block;
    margin-right: 10px;
}
.con{
    display: inline-block;
    width: 100%;
    height: 30px;
    color: #444444;
    font-size: 12px;
    margin-left: 10px;
}
.inputtext{
    width: 100%;
    height: 40px;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
}
.inputtext .text,placeholder{
    font-size: 12px;
    color: #888888;
    padding-left: 10px;
}
.inputtext .text{
    box-shadow: 2px 0px 2px #888888;
    height: 40px;
    flex: 1;
    background-color: #fff;
}
.inputtext .btn{
    background-color: red;
    width: 100px;
    margin-right: 0;
    font-size:14px;
    height: 40px;
    text-align: center;
    color: #fff;
}